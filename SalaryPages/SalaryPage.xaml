<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpenseTracker.SalaryPages.SalaryPage"
             Title="Salary Management"
             BackgroundColor="#F5F5F5">

    <Grid RowDefinitions="Auto,*" Padding="0">
        <!-- Header -->
        <Grid BackgroundColor="#2196F3" Padding="20,10">
            <Label Text="ðŸ’° Salary Management"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20,20" Spacing="20">
                
                <!-- Current Salary Card -->
                <Border Stroke="#E0E0E0" StrokeThickness="1" CornerRadius="12" Padding="20" BackgroundColor="White">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Current Monthly Salary" FontAttributes="Bold" FontSize="16"/>
                        <Label x:Name="CurrentSalaryLabel" Text="No salary entered" FontSize="20" TextColor="#2196F3"/>
                        <Label x:Name="SalaryDetailsLabel" Text="" FontSize="14" TextColor="#666"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Salary Form -->
                <Border Stroke="#E0E0E0" StrokeThickness="1" CornerRadius="12" Padding="20" BackgroundColor="White">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Enter Salary Details" FontAttributes="Bold" FontSize="16"/>
                        
                        <!-- Amount -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Monthly Amount (â‚¹)" FontAttributes="Bold" FontSize="14"/>
                            <Border Stroke="#2196F3" StrokeThickness="1" CornerRadius="8" Padding="12">
                                <Entry x:Name="AmountEntry"
                                       Placeholder="Enter salary amount"
                                       Keyboard="Numeric"
                                       ClearButtonVisibility="WhileEditing"
                                       TextColor="#333"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Frequency -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Payment Frequency" FontAttributes="Bold" FontSize="14"/>
                            <Picker x:Name="FrequencyPicker"
                                    Title="Select frequency"
                                    ItemsSource="{Binding FrequencyOptions}"
                                    ItemDisplayBinding="{Binding .}"
                                    BackgroundColor="White"
                                    TextColor="#333"
                                    TitleColor="#999"/>
                        </VerticalStackLayout>

                        <!-- Notes -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Notes (Optional)" FontAttributes="Bold" FontSize="14"/>
                            <Border Stroke="#2196F3" StrokeThickness="1" CornerRadius="8" Padding="12">
                                <Entry x:Name="NotesEntry"
                                       Placeholder="Any additional notes"
                                       ClearButtonVisibility="WhileEditing"
                                       TextColor="#333"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Save Button -->
                        <Button x:Name="SaveButton"
                                Text="ðŸ’¾ Save Salary"
                                BackgroundColor="#4CAF50"
                                TextColor="White"
                                Padding="20"
                                Margin="0,10,0,0"
                                FontAttributes="Bold"
                                Clicked="OnSaveSalaryClicked"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Loading Indicator -->
                <ActivityIndicator x:Name="LoadingIndicator"
                                   IsRunning="False"
                                   IsVisible="False"
                                   Color="#2196F3"/>
                
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
